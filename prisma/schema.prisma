generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL") // uses connection pooling
}

enum Role {
  USER
  BETA
  ADMIN
  SUPER
}

model User {
  id         String   @id @default(cuid())
  email      String   @unique
  password   String
  phone      String?  @unique
  role       Role     @default(USER)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}